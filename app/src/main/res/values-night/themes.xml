<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlertSystem" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">@color/white</item>
    </style>


    <style name="Theme.AlertSystemNo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- light mode -->
    <style name="SCREEN">
        <item name="android:background">@color/black</item>
    </style>

    <!-- light mode text -->
    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColorHint">#919191</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- light mode button -->
    <style name="BUTTON">
        <item name="android:backgroundTint">@color/y</item>
        <item name="android:textColor">#0a100d</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="LISTBG">
        <item name="android:background">@drawable/shape_night</item>
    </style>
    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/y</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/y</item>
        <item name="strokeColor">@color/y</item>
        <item name="colorOutline">@color/y</item>
        <item name="android:textColorHint">#878784</item>


    </style>



</resources>